<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="static\css\style.css">
    <link rel="stylesheet" href="static\css\create-user.css">
    <link rel="stylesheet" href="static\css\user-profile.css">
    <link rel="stylesheet" href="static\css\edit-user.css">
    <title>Display Panel</title>
</head>
<body>
<header>
    <a href ="/admin"><img src="static\img\logo.png" alt="QuestStore logo"></a>
</header>
<div class="row">
    <aside class="menu col-3">
        <nav>
            <ul>
                <li><a href="/admin/create-mentor" class="button">Create Mentor</a></li>
                <li><a href="/admin/create-group" class="button">Create Group</a></li>
                <li><a href="/admin/edit-mentor" class="button">Edit Mentor</a></li>
                <li><a href="/admin/display-mentors" class="button">Display Mentors</a></li>
                <li><a href="#" class="button">Manage Levels</a></li>
            </ul>
        </nav>
    </aside>
    <section class="col-6">
        <div class="col-6 area">
            <div class="col-12 dropdown">
                <label for="dropdown">Choose student:</label>
                <select id="dropdown" name="group" onchange="java_script_:show(this.options[this.selectedIndex].value)">
                {% for mentor in mentors %}
                    <option value="{{ mentor.id }}" selected>{{ mentor.firstName }} {{ mentor.lastName }}</option>
                {% endfor %}
                </select>
                <script>
                    function show(aval) {
                        var dropdown_length = document.getElementById("dropdown").length;
                        for (var i = 1; i<=dropdown_length; i++) {
                            if(i.toString() === aval) {
                                document.getElementById(aval).style.display = 'inline-block';
                            } else {
                                document.getElementById(i.toString()).style.display = 'none';
                            }
                        }
                    }
                </script>
            </div>
            <div class="col-12">
                {% for mentor in mentors %}
                    <div id = "{{ mentor.id }}" style="display:none">
                        <div id="hiddenDiv1">
                            <img class="col-12" src="static\img\emptyprofile.png" alt="Profile picture">
                            <div class="col-12 profile-info">
                                <form>
                                <ul class="edition">
                                    <li><input type="text" name="id" value="{{ mentor.id }}" readonly></li>
                                    <li><input type="text" name="name" value="{{ mentor.firstName }}"></li>
                                    <li><input type="text" name="surname" value="{{ mentor.LastName }}"></li>
                                    <li><input type="text" name="email" value="{{ mentor.email }}"></li>
                                    <li><input type="text" name="password" value="{{ mentor.password }}"></li>
                                    <div class="col-12 dropdown">
                                        <label>Choose Group:</label>
                                        <select name="dropdown">
                                            {% for group in groups %}
                                                <option value="{{group.id}}">{{group.groupName}}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <input class="col-4 submit-button" type="submit" value="Edit Mentor!" formmethod="post">
                                </ul>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <aside class="col-3 right-panel">
        <a href="/logout" class="sign-out-button button">Sign out</a>
        <script id="calendar" type="text/javascript" src="http://404bajery.pl/kalendarz/kal.php?tlo=8eb0e7&czcionka=FFFFFF&nag=8eb0e7&dni=8eb0e7&dzis=0099CC&szer=200"></script>
    </aside>
</div>
<footer class="col-12">
    All rights reserved.
</footer>
</body>
</html>
