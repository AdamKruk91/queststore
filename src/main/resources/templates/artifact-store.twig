<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css" integrity="sha384-5SOiIsAziJl6AWe0HWRKTXlfcSHKmYV4RBF18PPJ173Kzn7jzMyFuTtk8JA7QQG1" crossorigin="anonymous">
    <link rel="stylesheet" href="static\css\style.css">
    <link rel="stylesheet" href="static\css\store.css">
    <title>Display Panel</title>
    <script>
        function switchInfo(dropdownID)
        {
            var info = document.getElementById(dropdownID)
            info.style.display=(info.style.display=='none')?'':'none'
        }
    </script>
</head>
<body>
<header>
    <a href ="/admin"><img src="static\img\logo.png" alt="QuestStore logo"></a>
</header>
<div class="row">
    <aside class="menu col-3">
        <nav>
            <ul>
                <li><a href="/student" class="button">Display profile</a></li>
                <li><a href="/student/wallet" class="button">Display Wallet</a></li>
                <li><a href="/student/store" class="button">Buy Artifact</a></li>
            </ul>
        </nav>
    </aside>
    <section class="col-6">
        <div class="col-12 area">
          <h2 class="fas fa-shopping-cart" id="artifact-store"> Artifact Store</h2>
            <h3 class="far fa-closed-captioning" id="coolcoins"> : {{ coins }}</h3>
            <h3 class="fas fa-info-circle" id="info"> click on artifact for description</h3>
          <table class="default-table">
              <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Action</th>
              </tr>
              {% set counter = 0 %}
              {% if artifacts|length == 0 %}
                  <tr><td colspan="3">There are no artifacts here.</td></tr>
              {% endif %}
              {% for artifact in artifacts %}
                  {% set counter = counter + 1 %}
                  <tr>
                      <td onclick="switchInfo('artifact{{ counter }}')">{{ artifact.name }}</td>
                      <td id="artifact-price">{{ artifact.price }}</td>
                      <td class="buy"><a href="/student/store/buy/{{ artifact.ID }}">Buy</a></td>
                  </tr>
                  <tr id="artifact{{ counter }}" style="display:none">
                      <td colspan="3">{{ artifact.description }}</td>
                  </tr>
              {% endfor %}
        </table>
        </div>
    </section>

    <aside class="col-3 right-panel">
        <a href="/logout" class="sign-out-button button">Sign out</a>
        <script id="calendar" type="text/javascript" src="http://404bajery.pl/kalendarz/kal.php?tlo=8eb0e7&czcionka=FFFFFF&nag=8eb0e7&dni=8eb0e7&dzis=0099CC&szer=200"></script>
    </aside>
</div>
<footer class="col-12">
    All rights reserved.
</footer>
</body>
</html>
