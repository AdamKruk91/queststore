<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="static\css\style.css">
    <link rel="stylesheet" href="static\css\my-class.css">
    <title>Display Panel</title>
</head>
<body>
<header>
    <img src="static\img\logo.png" alt="QuestStore logo">
</header>
<div class="row">
    <aside class="menu col-3">
        <nav>
            <ul>
                <li><a href="/student" class="button">My Profile</a></li>
                <li><a href="/student/myclass" class="button">My Class</a></li>
                <li><a href="/student/wallet" class="button">Wallet</a></li>
                <li><a href="/student/store" class="button">Buy Artifact</a></li>
            </ul>
        </nav>
    </aside>
    <section class="col-6">
        <div class="col-12 area">
          <h2>Class: {{ group.name }}</h2>
          <table class="default-table">
              <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Action</th>
              </tr>
              {% if (group.getMentors()|length == 0) and (group.getStudents()|length == 0) %}
                <tr>
                    <td colspan="3">You have no friends (; __ ;)</td>
                </tr>
              {% endif %}
              {% for mentor in group.getMentors() %}
                  <tr>
                      <td>{{ mentor.name }} {{ mentor.surname }}</td>
                      <td>Mentor</td>
                      <td class="profile"><a href="/student/profile/{{ mentor.ID }}">Profile</a> </td>
                  </tr>
              {% endfor %}
              {% for student in group.getStudents() %}
                  <tr>
                      <td>{{ student.name }} {{ student.surname }}</td>
                      <td>Student</td>
                      <td class="profile"><a href="/student/profile/{{ student.ID }}">Profile</a> </td>
                  </tr>
              {% endfor %}
        </table>
        </div>
    </section>

    <aside class="col-3 right-panel">
        <a href="/logout" class="sign-out-button button">Sign out</a>
        <script id="calendar" type="text/javascript" src="http://404bajery.pl/kalendarz/kal.php?tlo=8eb0e7&czcionka=FFFFFF&nag=8eb0e7&dni=8eb0e7&dzis=0099CC&szer=200"></script>
    </aside>
</div>
<footer class="col-12">
    All rights reserved.
</footer>
</body>
</html>
