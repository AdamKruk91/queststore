    <aside class="menu col-3">
        <nav>
            <ul>
                <li><a href="/mentor/request" class="button">Display request</a></li>
                <li><a href="/mentor/create-artifact" class="button">Create artifact</a></li>
            </ul>
        </nav>
    </aside>
    <section class="col-6">
        <div class="col-6 area">
            <h2>Create artifact</h2>
            <form>
                <input class="col-12" type="text" name="name" placeholder="name" required>
                <input class="col-12" type="text" name="description" placeholder="description" required>
                <input class="col-12" type="number" name="price" placeholder="price" required>
                <input class="col-4 submit-button" type="submit" value="Add new artifact!" formmethod="post">
            </form>
        </div>
    </section>

    <aside class="col-3 right-panel">
        <a href="/logout" class="sign-out-button button">Sign out</a>
